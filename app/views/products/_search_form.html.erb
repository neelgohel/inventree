<%= search_form_for @q, remote: true do |f| %>
  <div class="row form-group">
    <div class="col col-sm-3">
      <%= f.search_field :name_cont, placeholder: t('product.search.name'), class: 'form-control' %>
    </div>
    <div class="col col-sm-3">
      <%= f.number_field :price_gteq, placeholder: t('product.search.min_price'), min: 0, class: 'form-control' %>
    </div>
    <div class="col col-sm-3">
      <%= f.number_field :price_lteq, placeholder: t('product.search.max_price'), min: 0, class: 'form-control' %>
    </div>
    <div class="col col-sm-3">
      <%= f.submit class: 'btn btn-primary btn-sm' %>
    </div>
  </div>
<% end %>
