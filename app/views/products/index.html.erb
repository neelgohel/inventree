<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <div class='row'>
          <div class="col-sm-4">
            <%= t('product.title') %>
          </div>
          <div class="col-sm-8 text-right">
            <%= link_to new_product_path, class: 'btn btn-sm btn-primary pull-right' do %>
              <i class="fa fa-plus"></i> <%= t('add') %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <table class="table table-striped">
            <thead>
              <tr>
                <th><%= t('url') %></th>
                <th><%= t('action') %></th>
              </tr>
            </thead>
            <tbody>
              <% @collection.each do |product| %>
                <tr>
                  <td><%=truncate(product.product_url, length: Settings.truncated_text.b_length) %></td>
                  <td>
                    <%= link_to product_path(product), title: t('show') do %>
                      <i class="fa fa-eye"></i>                    
                    <% end %>
                    <%= link_to marketplace_fetch_latest_data_path(product), title: t('product.fetch_latest_data') do %>
                      <i class="fa fa-cloud-download"></i>
                    <% end %>
                    <%= link_to product_path(product), 
                      method: :delete, data: { confirm: 'Are you sure?' },
                      remote: true, title: t('delete') do %>
                      <i class="fa fa-trash-o"></i>                       
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
