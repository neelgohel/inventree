<div class="content">
  <div class="animated fadeIn">
    <div class="row">
      <% @entitiesarray.each do |productentities| %>
        <div class="col-md-4">
          <div class="card">
            <%= image_tag product_image(productentities['image']) ,class: 'card-img-top img-size'%>
            <div class="card-body">
              <h4 class="card-title mb-3"><%= productentities['price']%></h4>
              <p class="card-text"><%= truncate(productentities['name'], length: Settings.truncated_text.s_length)%></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
