<div class="animated fadeIn">
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <h4 class="box-title">Welcome to Botree Inventree scraping</h4>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-header">
          <strong>Buttons</strong> Groups
        </div>
        <div class="card-body card-block">
          <form class="form-horizontal">
            <div class="row form-group">
              <div class="col col-md-12">
                <div class="input-group">
                  <%= text_field_tag 'link', nil , class: 'form-control', data: { target: "getDetail.product_link" }  %>
                  <div class="input-group-btn">
                    <%= link_to 'Fetch!', 'javacript:void(0)', class: 'btn btn-primary' ,data: { action:"click->getDetail#set_data" }%>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
        <div class="row">
          <div class="col-lg-3 col-md-6">
            <div class="card">
              <div class="card-body">
                <div class="stat-widget-five">
                  <div class="stat-icon dib flat-color-1">
                    <i class="pe-7s-cash"></i>
                  </div>
                  <div class="stat-content">
                    <div class="text-left dib">
                      <div class="stat-text"> <span class="count" id='product_rate' data-target ="getDetail.setRate">â‚¹</span></div>
                      <div class="stat-heading">Price</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-6">
            <div class="card">
              <div class="card-body">
                <div class="stat-widget-five">
                  <div class="stat-icon dib flat-color-2">
                    <i class="pe-7s-cart"></i>
                  </div>
                  <div class="stat-content">
                    <div class="text-left dib">
                      <div class="stat-text"><span class="count" id = "marketPlace" data-target = "getDetail.setMarketPlace">Marketplace</span></div>
                      <div class="stat-heading">Sales</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-6">
            <div class="card">
              <div class="card-body">
                <div class="stat-widget-five">
                  <div class="stat-icon dib flat-color-3">
                    <i class="pe-7s-browser"></i>
                  </div>
                  <div class="stat-content">
                    <div class="text-left dib">
                      <div class="stat-text"><span class="count">349</span></div>
                      <div class="stat-heading">Templates</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-3 col-md-6">
            <div class="card">
              <div class="card-body">
                <div class="stat-widget-five">
                  <div class="stat-icon dib flat-color-4">
                    <i class="pe-7s-users"></i>
                  </div>
                  <div class="stat-content">
                    <div class="text-left dib">
                      <div class="stat-text"><span class="count">2986</span></div>
                      <div class="stat-heading">Clients</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <button type="submit" class="btn btn-success btn-sm">
            <i class="fa fa-dot-circle-o"></i> Submit
          </button>
          <button type="reset" class="btn btn-danger btn-sm">
            <i class="fa fa-ban"></i> Reset
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
