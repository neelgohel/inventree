<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <div class='row'>
          <div class="col-sm-4">
            <%= t('receiver_mail.title') %>
          </div>
          <div class="col-sm-8 text-right">
            <%= link_to new_receiver_email_path, class: 'btn btn-sm btn-primary pull-right' do %>
              <i class="fa fa-plus"></i> <%= t('add') %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <table class="table table-striped">
            <thead>
              <tr>
                <th><%= t('url') %></th>
                <th><%= t('email') %></th>
                <th><%= t('action') %></th>
              </tr>
            </thead>
            <tbody>
              <% @collection.each do |email| %>
                <tr>
                  <td><%= email.name %></td>
                  <td><%= email.email %></td>
                  <td>
                    <%= link_to edit_receiver_email_path(email), title: t('edit') do %>
                      <i class="fa fa-edit"></i>
                    <% end %>
                    <%= link_to receiver_email_path(email), 
                      method: :delete, data: { confirm: 'Are you sure?' },
                      remote: true, title: t('delete') do %>
                      <i class="fa fa-trash-o"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
