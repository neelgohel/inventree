<div class="content">
  <div class="animated fadeIn">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header"><%= t('marketplace_mapping.title')%></div>
          <div class="card-body card-block">
            <%= form_for @marketplace, url: marketplace_save_mappings_path do |f| %>
              <div class="form-group">
                <div class='row'>
                  <div class='col-sm-4'>
                    <b>Entity Type</b>
                  </div>
                  <div class='col-sm-4'>
                    <b>Entity Identifier</b>
                  </div>
                  <div class='col-sm-4'>
                    <b>Entity Identifier Value</b>
                  </div>
                </div>
              </div>
              <%= f.fields_for :marketplace_mappings do |mm| %>
                <div class='row mb-15'>
                  <div class='col-sm-4'>
                    <%= mm.hidden_field :id, value: mm.object.try(:id) %>
                    <%= mm.hidden_field :entity_id %>
                    <%= entity_name(mm.object.try(:entity_id)) %>
                  </div>
                  <div class='col-sm-4'>
                    <div class="input-group">
                      <%= mm.text_field :entity_identifier, value: '', class: 'form-control', required: true%>
                    </div>
                  </div>
                  <div class='col-sm-4'>
                    <div class="input-group">
                      <%= mm.text_field :entity_identifier_value, value: '', class: 'form-control', required: true%>
                    </div>
                  </div>
                </div>
              <% end %>
              <%= f.submit class: 'btn btn-success btn-sm' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
