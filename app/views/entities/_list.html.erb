<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('name') %></th>
      <th><%= t('action') %></th>
    </tr>
  </thead>
  <tbody>
    <% @collection.each do |entity| %>
      <tr>
        <td><%= entity.name %></td>
        <td>
          <%= link_to edit_entity_path(entity), title: t('edit') do %>
            <i class="fa fa-edit"></i>
          <% end %>
          <%= link_to entity_path(entity), title: t('delete'),
          method: :delete, data: { confirm: 'Are you sure?' },
          remote: true do %>
            <i class="fa fa-trash-o"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render 'shared/pagination' %>
