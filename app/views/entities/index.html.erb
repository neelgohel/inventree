<div class="content">
  <div class="animated fadeIn">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <div class='row'>
              <div class="col-sm-4">
                <%= t('entity.title') %>
              </div>
              <div class="col-sm-8 text-right">
                <%= link_to new_entity_path, class: 'btn btn-sm btn-primary pull-right' do %>
                  <i class="fa fa-plus"></i> <%= t('add') %>
                <% end %>
              </div>
            </div>          
          </div>
          <div class="card-body">
            <div class="row">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th><%= t('name') %></th>
                    <th><%= t('action') %></th>
                  </tr>
                </thead>
                <tbody>
                  <% @entities.each do |entity| %>
                    <tr>
                      <td><%= entity.name %></td>
                      <td><%= t('action') %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="clearfix"></div>