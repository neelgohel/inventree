<div class="animated fadeIn">
  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-header"><%= t('entity.add_entity')%></div>
        <div class="card-body card-block">
          <%= form_with model: @entity do |f| %>
            <div class="form-group">
              <div class="input-group">
                <%= f.text_field :name, class: 'form-control', placeholder: t('entity.entity_name') ,required: true%>
              </div>
            </div>
            <%= f.submit class: 'btn btn-success btn-sm' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
